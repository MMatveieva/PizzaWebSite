<div class="col-md-6 col-lg-4">
    <div class="thumbnail pizza-card">
        <img src=<%= pizza.icon %>>
        <% if(pizza.is_new) { %>
        <span class="label label-danger new-pizza">Нова</span>
        <% } else if(pizza.is_popular) { %>
        <span class="label label-success popular-pizza">Популярна</span>
        <% } %>
        <div class="caption"><h3><%= pizza.title %></h3>
            <p class="pizza-type"><%= pizza.type %></p>
            <p class="description">
                <%= getIngredientsArray(pizza).join(", ") %>
            </p>
            <div class="size-weight-buy">
                <%= if (pizza.small_size != null || pizza.small_size != undefined){ %>
                <div class="col-sm-6 small-pizza">
                    <div class="pizza-size">
                        <img src="assets/images/size-icon.svg">
                        <span class="size">30</span>
                    </div>
                    <div class="pizza-weight">
                        <img src="assets/images/weight.svg">
                        <span class="weight">400</span>
                    </div>
                    <div class="pizza-price">
                        <h2>289</h2>
                        <p>грн</p>
                    </div>
                    <a href="#" class="btn btn-warning buy-button">Купити</a>
                </div>
                <% } %>
                <%= if (pizza.big_size != null || pizza.big_size != undefined){ %>
                <div class="col-sm-6 big-pizza">
                    <div class="pizza-size">
                        <img src="assets/images/size-icon.svg">
                        <span class="size">40</span>
                    </div>
                    <div class="pizza-weight">
                        <img src="assets/images/weight.svg">
                        <span class="weight">700</span>
                    </div>
                    <div class="pizza-price">
                        <h2>399</h2>
                        <p>грн</p>
                    </div>
                    <a href="#" class="btn btn-warning buy-button">Купити</a>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</div>