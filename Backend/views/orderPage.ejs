<% include common/header.ejs %>

<div class="cart">
    <div class="order">
        <span class="order-label">
            <span class="title">Замовлення</span>
            <span class="left-count-label">4</span>
        </span>
    </div>
    <div id="ordered" class="order-list">
    </div>
    <div class="buy-panel">
        <span class="order-price-title">Сума замовлення</span>
        <span class="order-price-money">грн</span>
        <div class="order-button">
            <a class="btn btn-lg btn-default btn-block order-edit-button" href="index.html">Редагувати замовлення</a>
        </div>
    </div>
</div>

<div class="container-fluid wrap">
    <div class="contact-information">
        <div class="order-info">Контактні дані</div>
        <div class="col-md-7">
            <form class="form-horizontal">
                <div class="form-group name-group">
                    <label for="inputName" class="col-sm-2 control-label">Ім’я</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control name-input" id="inputName" placeholder="Ім'я Прізвище">
                    </div>
                    <span class="warning-text name-warning hidden">Введіть тільки власне ім’я, без цифр</span>
                </div>
                <div class="form-group phone-group">
                    <label for="inputPhone" class="col-sm-2 control-label">Телефон</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control phone-input" id="inputPhone" placeholder="+380996663311">
                    </div>
                    <span class="warning-text phone-warning  hidden">Введіть номер телефону у форматі +380 або почніть з 0</span>
                </div>
                <div class="form-group address-group">
                    <label for="inputAddress" class="col-sm-2 control-label">Адреса</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control address-input" id="inputAddress"
                               placeholder="Київ, вул. Спаська, 2">
                    </div>
                    <span class="warning-text address-warning hidden">Введіть адресу доставки піци</span>
                </div>
            </form>
        </div>
        <div class="col-md-5">
            <div class="order-summery">
                <div class="info">Інформація про замовлення</div>
                <div class="delivery-time">
                    <span class="delivery-time-q">Приблизний час доставки:</span>
                    <span class="delivery-time-answer">невідомий</span>
                </div>
                <div class="delivery-address">
                    <span class="delivery-address-q">Адресса доставки:</span>
                    <span class="delivery-address-answer">невідома</span>
                </div>
            </div>
        </div>
    </div>
    <div class="next">
        <div class="next-button">
            <button class="btn btn-block btn-warning confirm-button">Далі <i
                        class="glyphicon glyphicon-chevron-right"></i></button>
        </div>
    </div>
</div>

<% include common/footer.ejs %>